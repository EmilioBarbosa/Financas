{
    "name": "emiliobarbosa/skeleton",
    "description": "PHP skeleton app with docker",
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
        {
            "name": "Emilio Barbosa",
            "email": "emiliobarbos4@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "robmorgan/phinx": "1.x-dev",
        "symfony/yaml": "6.3.x-dev",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "scripts": {
        "run-tests": "vendor/bin/phpunit"
    },
    "require-dev": {
        "pestphp/pest": "2.x-dev"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
